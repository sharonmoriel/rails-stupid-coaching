<h1>Stupid Coaching</h1>


<form action="/answer" method="get">
  <div class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="question">Ask your coach anything:</label>
    <div class="form-inline">
      <input class="form-control inline-block" type="text" name="question" placeholder="your stupid question">
      <input class="btn btn-primary form-control" type="submit" value="Ask">
    </div>
  </div>
</form>
